---
layout: base.njk
---

<header class="container mb-10 mt-20 text-center">
  <h1 class="sr-only">{{- title -}}</h1>
  <img
    alt="{{- t.logoAlt -}}"
    class="mx-auto h-auto w-36 md:w-40"
    src="/logo.png"
  />
</header>
<main
  class="prose container text-center md:prose-lg prose-headings:font-sans prose-headings:font-bold hover:prose-a:text-red focus:prose-a:text-red prose-ul:list-none prose-ul:[padding-inline-start:_0] prose-li:[padding-inline-start:_0]"
>
  {{ content | safe }}
</main>
<footer>
  <div class="container">
    {% if page.fileSlug !== "404" -%}
      <ul
        class="my-12 flex flex-col items-center md:my-8"
        role="menu"
        aria-label="{{- t.footer.languageMenuLabel -}}"
      >
        {% for link in page.url | locale_links %}
          <li class="my-2" lang="{{- link.lang -}}" role="menuitem">
            <a
              class="text-black underline hover:text-red focus:text-red"
              href="{{- link.url -}}"
            >
              {{- nav.languages[link.lang] -}}
            </a>
          </li>
        {% endfor -%}
      </ul>
    {% endif -%}
    <div class="container pb-8 pt-4 text-center">
      <a
        class="underline hover:text-red focus:text-red"
        href="{{- 'accessibility-statement' | tUrl }}"
        >{{- t.accessibilityStatement -}}</a
      >
    </div>
  </div>
</footer>
